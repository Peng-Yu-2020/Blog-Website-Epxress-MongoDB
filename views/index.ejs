<html lang="en">
  <%- include("./partials/head") %>
<body>
  <%- include("./partials/nav") %>

    <div class = "blogs content">
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { %>
        <% blogs.forEach((blog) => { %>
        <a href = "/blogs/<%= blog.id %>">
          <h3 class = "title"><%= blog.title%></h3>
          <p class = "snippet"><%= blog.snippet%></p>
        </a>
        <% }) %>
        <% } else { %>
            <p>There is no blog found!</p>
          <% } %>
    </div>
</body>
  <%- include("./partials/footer") %>
</html>